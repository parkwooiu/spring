<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.CartMapper">

    <insert id="addToCart" parameterType="org.zerock.domain.CartVO">
        INSERT INTO Cart (UserID, ProductID, Quantity)
        VALUES (#{userID}, #{productID}, #{quantity})
    </insert>

    <select id="getCartItem" resultType="org.zerock.domain.CartVO" parameterType="int">
        SELECT * FROM Cart WHERE CartID = #{cartID}
    </select>

    <update id="updateCartItem" parameterType="org.zerock.domain.CartVO">
        UPDATE Cart SET Quantity = #{quantity}
        WHERE CartID = #{cartID}
    </update>

    <delete id="deleteCartItem" parameterType="int">
        DELETE FROM Cart WHERE CartID = #{cartID}
    </delete>

</mapper>